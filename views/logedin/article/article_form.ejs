<div class="col-lg-8 mx-auto">
  <form action="<%=action%>" method="post">
    <div class="form-group">
      <label for="title" class="form-label">Title</label>
      <input type="text" name="title" class="form-control" value="<%- typeof article!='undefined'? article.title:''%>">
    </div>
    <div class="form-group">
      <label for="status" class="form-label">Status</label>
      <select type="text" name="status" class="form-control">
        <option value="public"<%- typeof article!='undefined'&&article.status =='public'? ' selected':''%>>Public</option>
        <option value="private"<%- typeof article!='undefined'&&article.status =='private'? 'selected':''%>>Private</option>
      </select>
    </div>
    <div class="form-group">
      <label for="article" class="form-label">Article</label>
      <textarea name="article" id="article" class="form-control"><%- typeof article!='undefined'? article.article:''%></textarea>
    </div>
    <div class="form-group">
      <input type="submit" value="<%=caption%>" class="btn btn-primary form-control">
    </div>
  </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.18.0/ckeditor.js" integrity="sha512-woYV6V3QV/oH8txWu19WqPPEtGu+dXM87N9YXP6ocsbCAH1Au9WDZ15cnk62n6/tVOmOo0rIYwx05raKdA4qyQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
  function getEditor() {

    CKEDITOR.replace("article")
  }
  window.onload = getEditor()
</script>