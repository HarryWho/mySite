<div class="row mt-5">
  <div class="col-lg-6 mx-auto px-5 pb-5">
    <form action="/auth" method="post">
      <fieldset class="mx-auto">
        <legend class="text-center text-primary display-6"><i class="bi bi-bootstrap"></i></legend>
        <div class="form-group">
          <label for="email" class="form-label">User Email</label>
          <input type="email" name="email" id="email" class="input-sm form-control">
        </div>
        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" id="password" class="form-control input-sm">
        </div>
        <div class="row pt-4">
          <div class="col-md-12">
            <button type="submit" class="btn btn-sm btn-primary">Login</button> Dont have an account? <a href="/auth/register">Register</a>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>