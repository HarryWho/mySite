<div class="row mt-5">

  <div class="col-lg-6 mx-auto px-5 pb-5">
    <div class="col-lg-12">
      <%- include('../partials/_errors.ejs') %>
    </div>
    <form action="/auth/register" method="post">
      <fieldset class="mx-auto">
        <legend class="text-center text-primary display-6"><i class="bi bi-bootstrap"></i></legend>
        <div class="form-group">
          <label for="displayName" class="form-label">User Name</label>
          <input type="text" name="displayName" id="displayName" class="input-sm form-control" value="<%- typeof field!='undefined' ? field.displayName : ''%>">
        </div>
        <div class="form-group">
          <label for="email" class="form-label">User Email</label>
          <input type="email" name="email" id="email" class="input-sm form-control" value="<%- typeof field!='undefined' ? field.email : ''%>">
        </div>
        <div class="form-group">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" id="password" class="form-control input-sm">
        </div>
        <div class="form-group">
          <label for="password2" class="form-label">Retype Password</label>
          <input type="password" name="password2" id="password2" class="form-control input-sm">
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" id="genderm" value="male">
          <label class="form-check-label" for="genderm">
              Male
            </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gender" id="genderf" value="female">
          <label class="form-check-label" for="genderf">
              Female
            </label>
        </div>
        <div class="row pt-4">
          <div class="col-md-12">
            <button type="submit" class="btn btn-sm btn-primary">Register</button> Already Registered? <a href="/auth">Login</a>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>